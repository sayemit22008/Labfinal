<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quiz.LoginViewController">
   <children>
      <Label text="কুইজ গেম" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="ইউজার আইডি:" />
            <TextField fx:id="userIdField" maxWidth="200.0" />
            
            <Label text="পাসওয়ার্ড:" />
            <PasswordField fx:id="passwordField" maxWidth="200.0" />
         </children>
      </VBox>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="loginButton" onAction="#handleLogin" text="লগইন" />
            <Button fx:id="registerButton" onAction="#handleRegister" text="নিবন্ধন" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
